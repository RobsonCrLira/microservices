{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
  }
}