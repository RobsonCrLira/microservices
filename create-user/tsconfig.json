{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "ES6",
      "ESNext"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true
  }
}